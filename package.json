{
	"name": "email-explorer-root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"lint": "npx @biomejs/biome check template/ packages/dashboard/src packages/worker/src || (npx @biomejs/biome check --write template/ packages/dashboard/src packages/worker/src/; exit 1)",
		"build-dashboard": "pnpm run --filter email-explorer-dashboard build",
		"build-worker": "pnpm run --filter email-explorer build",
		"test": "pnpm run --filter email-explorer test",
		"build": "pnpm build-dashboard && pnpm build-worker",
		"deploy-dev-worker": "pnpm run --filter email-explorer-dev-worker deploy",
		"package": "pnpm run --filter email-explorer package",
		"publish-npm": "pnpm run --filter email-explorer publish-npm"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"wrangler": "^4.45.0"
	}
}
